" Text, tab, and indent configurations
" ------------------------------------

" 1 tab == 2 spaces
set tabstop=2
set shiftwidth=2

" Correct indentation for python
au Filetype python set 
      \ tabstop=4
      \ softtabstop=4
      \ shiftwidth=4
      \ textwidth=79
      \ fileformat=unix

au Filetype tex set textwidth=79

" Use spaces instead of tabs
set expandtab

" Auto indent
set ai 

" Linebreak on 500 characters
set lbr
set tw=500

" Wrap lines
set wrap

" Ez indent
nnoremap g= gg=G''

" vim:ft=vim
